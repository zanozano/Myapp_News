<% if notice.present? %>
  <div id="notification" class="alert alert-success text-center col-12 col-lg-6 mx-auto">
    <p class="m-0" style="color: green"><%= notice %></p>
  </div>
  <script>
    setTimeout(function() {
      var notification = document.getElementById("notification");
      notification.style.display = "none";
    }, 5000);
  </script>
<% end %>


<div class="col-md-6 col-12 mx-auto mb-4">
  <h1 class="z-index-4 mb-4">Articulos</h1>
  <%= link_to 'Crear Nuevo Articulo', new_article_path, class: 'btn btn-success' %>
</div>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
  <% end %>
</div>
